@model IEnumerable<TheDocsNetCore.Models.Post>

@{
    ViewData["Title"] = "The homepage";
}

<div class="row">
    <div class="medium-offset-2 medium-8 end columns">
        <h2>Blogidge</h2>
        <h6>Technical for the non-technical</h6>
        <hr />
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="medium-offset-2 medium-8 end columns all-posts">
            <h4>@item.Title</h4>
            @if (item.Series != null)
            {
                <h5>Part of the <a asp-controller="Blog" asp-action="AllPostsInSeries" asp-route-id="@item.SeriesID"><strong>@item.Series.Name</strong></a> series</h5>
            }
            <span>by @item.User.FirstName</span>
            <span>&nbsp;|&nbsp;</span>
            <span><i class="fa fa-clock-o"></i> @string.Format("{0:dd MMM yyyy}", @item.ReleaseDate)</span>
            <p><a asp-controller="Blog" asp-action="Index" asp-route-id="@item.PostID" asp-route-slug="@item.Slug">Read more</a></p>
            <hr />
        </div>
    </div>
}

<div class="row">
    <div class="medium-offset-2 medium-8 end columns all-posts">

        <ul class="pagination text-left" role="navigation" aria-label="Pagination">
            <li class="pagination-previous disabled">Previous <span class="show-for-sr">page</span></li>
            <li class="current"><span class="show-for-sr">You're on page</span> 1</li>
            <li><a href="#" aria-label="Page 2">2</a></li>
            <li><a href="#" aria-label="Page 3">3</a></li>
            <li><a href="#" aria-label="Page 4">4</a></li>
            <li class="ellipsis" aria-hidden="true"></li>
            <li><a href="#" aria-label="Page 12">12</a></li>
            <li><a href="#" aria-label="Page 13">13</a></li>
            <li class="pagination-next"><a href="#" aria-label="Next page">Next <span class="show-for-sr">page</span></a></li>
        </ul>

    </div>
</div>